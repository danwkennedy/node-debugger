{
  "manifest_version": 2,
  "name": "Node Debugger",
  "description": "Debug Node in Chrome devtools",
  "version": "0.6.0",
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "http://*/",
    "https://*/",
    "storage"
  ],
  "icons": {
    "32": "./assets/icon32.png",
    "64": "./assets/icon64.png",
    "128": "./assets/icon128.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
